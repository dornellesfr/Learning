x = str(input('Digite seu nome: ')).strip()
print('Analisando seu nome...')
print('Seu nome em letras maiúsculas é {}'.format(x.upper()))
print('Seu nome em letras minúsculas é {}'.format(x.lower()))
print('Seu nome tem ao todo {} letras'.format(len(x) - x.count(' ')))
sep = x.split()
print('Seu primeiro nome é {} e ele tem {} letras'.format(sep[0], len(sep[0])))
