list = []
while True:
    list.append(int(input('Type a value: ')))
    a = input('Do you wanna continue? [Y/N] ')
    if a in 'Nn':
        break
print('-=' * 15)
if 5 in list:
    print('The list has the value 5!!')
else:
    print('The value 5 is not in list!')
print(f'You typed {len(list)} elements in the list!')
print(f'The values in descending order are {sorted(list, reverse=True)}')
