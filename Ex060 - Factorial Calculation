# from math import factorial
# n = int(input('Type a number to do factorial of him: '))
# print('The factorial of {} is {}'.format(n, factorial(n)))

n = int(input('Type a number: '))
print('Calculating {}! '.format(n))
c = n
f = 1
while c > 0:
    print('{}'.format(c), end='')
    print(' x ' if c > 1 else ' = ', end='')
    f *= c
    c -= 1
print(f)
