soma = 0
cont = 0
for c in range(1, 7):
    n = int(input('Digite o {}° valor: '.format(c)))
    if n % 2 == 0:
        soma += n
        cont += 1
if soma == 0:
    print('Não há nenhum número par aqui!')
elif soma != 0:
    print('Você informou {} números PARES e a soma deles é {} !'.format(cont, soma))
