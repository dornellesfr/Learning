soma = 0
cont = 0
print('A soma de todos números ímpares de 1 a 500 que sao múltiplos de 3.')
print('Esses são os número!')
for c in range(1, 501, 2):
    if c % 3 == 0:
        print(c, end=' ')
        soma = soma + c  #soma += c
        cont = cont + 1  #cont += 1
print('\nA soma dos {} valores solicitados é {}\n'.format(cont, soma))

print(sum(range(3, 501, 6)))
